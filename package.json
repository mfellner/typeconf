{
  "name": "typeconf",
  "version": "0.4.0",
  "description": "A typesafe hierarchical configuration manager for Node.js.",
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "https://github.com/mfellner/typeconf",
  "author": "Maximilian Fellner <max.fellner@gmail.com>",
  "license": "MIT",
  "keywords": [
    "configuration",
    "settings",
    "typescript",
    "environment"
  ],
  "engines": {
    "node": ">=6.11.0"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "build": "tsc -p .",
    "dist": "npm run clean && npm run build",
    "lint": "tslint --type-check --project tsconfig.json",
    "test": "npm run lint && jest --coverage",
    "prettier": "prettier --print-width=100 --single-quote --write \"./src/**/*.+(js|ts)\"",
    "prepublishOnly": "npm run dist"
  },
  "dependencies": {
    "change-case": "3.0.1",
    "lodash.merge": "4.6.0"
  },
  "optionalDependencies": {
    "js-yaml": "3.8.4",
    "minimist": "1.2.0"
  },
  "devDependencies": {
    "@types/jest": "20.0.2",
    "@types/lodash.merge": "4.6.2",
    "@types/minimist": "1.2.0",
    "@types/node": "8.0.3",
    "jest": "20.0.4",
    "prettier": "1.4.4",
    "rimraf": "2.6.1",
    "ts-jest": "20.0.6",
    "tslint": "5.4.3",
    "typescript": "2.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/test/.*\\.test.ts$",
    "mapCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  }
}
